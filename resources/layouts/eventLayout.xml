<layout id="EventLayout">
    <label
        id="scoreText"
        x="center"
        y="center"
        font="Graphics.FONT_NUMBER_MEDIUM"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
        color="Graphics.COLOR_WHITE"
        text="0-0"
    />

    <label
        id="timeText"
        x="center"
        y="bottom"
        font="Graphics.FONT_LARGE"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
        color="Graphics.COLOR_WHITE"
        text="45:00"
    />

</layout>
